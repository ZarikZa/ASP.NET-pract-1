<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Регистрация</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{url_for('static', filename='style.css')}}">
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="row">
                    <div class="col-md-4">
                        <img src="left-image.jpg" class="img-fluid rounded" alt="Левая картинка">
                    </div>
                    <div class="col-md-8">
                        <div class="card shadow-lg rounded-lg p-4">
                            <div class="card-header text-center">
                                <h2 class="text-center font-weight-bold text-primary">Регистрация</h2>
                            </div>
                            <div class="card-body">
                                <form method="post">
                                    <div class="form-group">
                                        <label for="clientSurname" class="font-weight-bold">Фамилия пользователя:</label>
                                        <input type="text" class="form-control" name="clientSurname" placeholder="Введите имя пользователя">
                                    </div>
                                    <div class="form-group">
                                        <label for="clientName" class="font-weight-bold">Имя пользователя:</label>
                                        <input type="text" class="form-control" name="clientName" placeholder="Введите имя пользователя">
                                    </div>
                                    <div class="form-group">
                                        <label for="clientMiddleName" class="font-weight-bold">Отчество пользователя:</label>
                                        <input type="text" class="form-control" name="clientMiddleName" placeholder="Введите имя пользователя">
                                    </div>
                                    <div class="form-group">
                                        <label for="loginn" class="font-weight-bold">Email:</label>
                                        <input type="email" class="form-control" name="loginn" placeholder="Введите email">
                                    </div>
                                    <div class="form-group">
                                        <label for="pass" class="font-weight-bold">Пароль:</label>
                                        <input type="password" class="form-control" name="pass" placeholder="Введите пароль">
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-block rounded-pill font-weight-bold">Зарегистрироваться</button>
                                </form>
                                @if(ViewBag.ErrorMessage != null)
                                {
                                    @ViewBag.ErrorMessage;
                                }
                                <div class="text-center mt-3">
                                    <a asp-action="Autoriz" asp-controller="Register" class="text-primary">Уже есть аккаунт? Войдите!</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>

